---
import Layout from "../../layouts/Layout.astro";
import SectionContainer from "../../components/SectionContainer.astro";
import TitleSection from "../../components/TitleSection.astro";

const appData = {
  nombre: "Proxmox Manager",
  descripcion: "App para gestionar tu infraestructura Proxmox sin recopilar datos personales.",
  politica: [
    { html: "<strong>Privacidad:</strong> Esta app no recopila datos personales." },
    { html: "Solo se utiliza para cálculos matemáticos y <em>no almacena información</em> del usuario." },
    { html: "<strong>Permisos:</strong> La app solicita únicamente los permisos necesarios para conectarse a tu servidor Proxmox." },
    { html: "<strong>Conexión segura:</strong> Toda la comunicación con el servidor se realiza mediante protocolos seguros (HTTPS o SSH)." },
    { html: "<strong>Sin publicidad:</strong> Esta app no muestra anuncios ni utiliza rastreadores de terceros." },
    { html: "<strong>Sin almacenamiento externo:</strong> No se almacena información en servidores externos ni se comparte con terceros." },
    { html: "<strong>Actualizaciones:</strong> Las actualizaciones de la app pueden incluir mejoras de seguridad y funcionalidad, pero nunca afectarán la privacidad del usuario." }
  ]
};
---

<Layout title="Política de Privacidad" description={appData.descripcion}>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <TitleSection>
        {appData.nombre}
      </TitleSection>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 ">
        {appData.descripcion}
      </p>
      <h2 class="text-xl font-bold mb-2 text-blue-600 dark:text-blue-400 ">
        Política de Privacidad
      </h2>
      <div class="flex flex-col gap-4 mb-6">
        {appData.politica.map((parrafo) => (
          <p
            class="text-base text-gray-700 dark:text-gray-200 "
            set:html={parrafo.html}
          />
        ))}
      </div>
      <a
        href="/"
        class="block mx-auto w-fit px-6 py-2 rounded-lg bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold shadow hover:from-blue-600 hover:to-purple-600 transition"
      >
        Volver al inicio
      </a>
    </SectionContainer>
  </main>
</Layout>
