---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import TitleSection from "../components/TitleSection.astro";
const appData = {
  id: "Proxmox-manager",
  nombre: "Proxmox Manager",
  descripcion: "App para gestionar tu infraestructura Proxmox sin recopilar datos personales."
};
---

<Layout
  title="Mis Apps"
  description="Política de privacidad de Proxmox Manager"
>
  <main class="px-4">
	<SectionContainer class="py-16 md:py-36">
	  <TitleSection>
		Mis Apps en Google Play
	  </TitleSection>
	  <p class="text-xl text-gray-700 dark:text-gray-300 mb-10">
		Selecciona la app para ver su política de privacidad:
	  </p>
	  <ul class="flex flex-col gap-8">
		<li class="group rounded-2xl bg-white dark:bg-gray-950 shadow-xl border border-gray-200 dark:border-gray-800 p-8 transition-transform hover:-translate-y-1 hover:shadow-2xl">
		  <h2 class="text-2xl font-bold mb-2 text-gray-800 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition">
			{appData.nombre}
		  </h2>
		  <p class="text-lg text-gray-600 dark:text-gray-300 mb-4">
			{appData.descripcion}
		  </p>
		  <a
			href="/politicas/proxmox-manager"
			class="inline-block px-6 py-2 rounded-lg bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold shadow hover:from-blue-600 hover:to-purple-600 transition"
		  >
			Ver política de privacidad
		  </a>
		</li>
	  </ul>
	</SectionContainer>
  </main>
</Layout>
